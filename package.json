{
  "name": "package-name-fixer",
  "version": "1.0.10",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "bun run index.ts",
    "test": "bun test"
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "devDependencies": {
    "@types/bun": "^1.1.17",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacklehamster/package-name-fixer.git"
  },
  "author": {
    "name": "Jack Le Hamster",
    "email": "jacklehamster@gmail.com"
  },
  "description": "Goes into package.json and update the name to match the Github repository. Also updates author, description. It's useful when a npm repo is build out of a template.",
  "keywords": [
    "bun",
    "npm",
    "package",
    "packagejson"
  ],
  "publishConfig": {
    "access": "public"
  }
}
